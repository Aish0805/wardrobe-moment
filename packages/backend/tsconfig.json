{
  "compilerOptions": {
    "target": "ES2020",           // modern JS
    "module": "commonjs",         // important for ES modules
    "moduleResolution": "node",
    "outDir": "./dist",           // compiled JS goes here
    "rootDir": "./src",           // source TS files
    "strict": true,
    "esModuleInterop": true,      // for commonjs imports
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
